<ipojo xmlns:ev="org.apache.felix.ipojo.handlers.event">

    <!-- ============================================================== -->
    <!--                           Components                           -->
    <!-- ============================================================== -->

    <!-- HomeManager -->
    <component classname="com.olnc.made.homenap.globalcoordinator.HomeManager" name="home-manager">
        <provides/>

        <requires field="deviceInfoDBItf"/>
        <requires field="controlPointManagerItf"/>

        <callback transition="validate" method="start"/>
        <callback transition="invalidate" method="stop"/>

        <properties>
            <property field="stateful" mandatory="true" value="false"/>
        </properties>
    </component>

    <!-- DeviceInfoDB -->
    <component classname="com.olnc.made.homenap.globalcoordinator.DeviceInfoDB" name="device-info-db">
        <provides/>

        <callback transition="validate" method="start"/>

        <properties>
            <property field="stateful" mandatory="true" value="true"/>
            <property field="deviceInfoMap"/>
        </properties>
    </component>

    <!-- GCDevice -->
    <component classname="com.olnc.made.homenap.globalcoordinator.GCDevice" name="gc-device">
        <provides/>

        <requires field="deviceInfoDBItf"/>
        <requires field="globalCoordinatorEvent"/>

        <callback transition="validate" method="start"/>
        <callback transition="invalidate" method="stop"/>

        <properties>
            <property field="stateful" mandatory="true" value="false"/>
        </properties>
    </component>

    <!-- ControlPointManager -->
    <component classname="com.olnc.made.homenap.globalcoordinator.ControlPointManager" name="gc-control-point-manager">
        <provides/>

        <requires field="factory" filter="(factory.name=local-manager-control-point)"/>

        <callback transition="validate" method="start"/>

        <properties>
            <property field="stateful" mandatory="true" value="false"/>
        </properties>
    </component>

    <!-- LocalManagerControlPoint -->
    <component classname="com.olnc.made.homenap.globalcoordinator.LocalManagerControlPoint" name="local-manager-control-point">
        <provides/>

        <callback transition="validate" method="start"/>
        <callback transition="invalidate" method="stop"/>

        <properties>
            <property field="udnLocalManager" mandatory="true"/>
            <property field="stateful" mandatory="true" value="false"/>
        </properties>
    </component>

    <!-- ============================================================== -->
    <!--                           Instances                            -->
    <!-- ============================================================== -->

    <instance component="home-manager"/>
    <instance component="device-info-db">
        <property name="deviceInfoMap" type="map"/>
    </instance>
    <instance component="gc-control-point-manager"/>
    <instance component="gc-device"/>
</ipojo>